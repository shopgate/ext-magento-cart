{
  "version": "1.2.3",
  "id": "@shopgate/magento-cart",
  "configuration": {
    "enableCartCoupons" : {
      "type" : "static",
      "destination" : "backend",
      "params" : {
        "value" : true
      }
    },
    "magentoUrl" : {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.magentoUrl"
      }
    },
    "allowSelfSignedCertificate" : {
      "type": "bigApi",
      "destination" : "backend",
      "default": false,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.allowSelfSignedCertificate"
      }
    }
  },
  "components": [
    {
      "id": "locale/en-US",
      "type": "translations",
      "path": "frontend/locale/en-US.json"
    },
    {
      "id": "locale/de-DE",
      "type": "translations",
      "path": "frontend/locale/de-DE.json"
    },
    {
      "id": "locale/fr-FR",
      "type": "translations",
      "path": "frontend/locale/fr-FR.json"
    },
    {
      "id": "locale/nl-NL",
      "type": "translations",
      "path": "frontend/locale/nl-NL.json"
    },
    {
      "id": "locale/pl-PL",
      "type": "translations",
      "path": "frontend/locale/pl-PL.json"
    },
    {
      "id": "locale/pt-PT",
      "type": "translations",
      "path": "frontend/locale/pt-PT.json"
    },
    {
      "id": "CouponCode",
      "type": "portals",
      "path": "frontend/portals/CouponCode/index.jsx",
      "target": "cart.item.coupon-code"
    }
  ]
}
